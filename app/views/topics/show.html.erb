<p id="notice"><%= notice %></p>

<h1><%= @topic.title %></h1>
<p>
  <b>User:</b>
  <%= @topic.user.name %>
</p>

<p>
  <b>Body:</b>
  <%= @topic.body %>
</p>

<%= form_for(@comment) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :content %><br />
 	<%= f.text_area :content %>
  </div>
  <%= f.hidden_field :topic_id, :value => @topic.id %>
  <div class="actions">
    <%= f.submit %>
   </div>
<% end %>

<ul class="topic_comments">
  <%= render @topic.comments %>
</ul>

<%= link_to 'Back', forum_path(@topic.forum) %>